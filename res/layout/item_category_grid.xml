<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_category_size"
    android:layout_height="@dimen/view_category_size"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/avatar"
        android:layout_width="@dimen/ic_category_size"
        android:layout_height="@dimen/ic_category_size"
        android:layout_marginTop="@dimen/ic_category_margin_top"
        android:contentDescription="@string/image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy" />

    <TextView
        android:id="@id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="14sp" />

</LinearLayout>